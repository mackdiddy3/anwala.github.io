                                                  var root = document.currentScript.closest('.liveblog_post');
                                                  //*** this doesn't work for quizzes on a detail view when the lead post is a quiz.
                                                  if ( document.querySelector('.cannonical-card script') ) root = document.currentScript.closest('.cannonical-card');
                                                  if (!root) {
                                                      console.error('No root element found, document.currentScript is', document.currentScript)
                                                  }
                                                  // The href will look something like
                                                  // https://www.nbcnews.com/politics/politics-news/live-blog/state-union-2019-live-blog-latest-updates-trump-s-speech-n964751
                                                  // and we want the id that starts after the letter "n" at the end.
                                                  var id = root.querySelector('.nbcnews-dc-heading a')
                                                      .getAttribute('href')
                                                      .split('-')
                                                      .pop()
                                                      .replace(/^n/, '');
                                                  var quiz = null;
                                                  
                                                  quiz_data.forEach(function(q) {
                                                      if (q.id === id) quiz = q;
                                                  })
                              
                                                  // if there's no quiz matching quiz for the
                                                  // id there's no point in continuing so let's
                                                  // just return here and not render anything
                                                  // to the page, which would ultimately just
                                                  // confused viewers
                                                  if (!quiz) {
                                                      console.error(`No quiz found for ${id}`);
                                                      return;
                                                  }
                              
                                                  /**
                                                  * @callback requestCallback
                                                  * @param {(null|Object)} error
                                                  * @param {(null|Object)} payload
                                                  */
                                                  /**
                                                   * Wraps querySelector() scoped to the live blog post
                                                   * @param {string} selector
                                                   * @returns {HTMLElement} Matching node
                                                   */
                                                  function $(selector) {
                                                      return root.querySelector(selector);
                                                  }
                                                  /**
                                                   * Wraps querySelectorAll() scoped to the live blog post
                                                   * @param {string} selector
                                                   * @returns {Array} All matching nodes
                                                   */
                                                  function $a(selector) {
                                                      return root.querySelectorAll(selector);
                                                  }
                                                  /**
                                                   * Returns a number in AP style
                                                   * @param {number}
                                                   * @returns {string}
                                                   */
                                                  function get_ap_numeral(i) {
                                                      if (+i < 11) return ap_numerals[+i];
                                                      return i;
                                                  }
                                                  /**
                                                   * Get the URL for the next quiz that is both published but not yet taken
                                                   * @returns {string} Url for next quiz
                                                   */
                                                  function get_next_quiz_url() {
                                                      var quiz_ids = quiz_data.map(function(q) { return q.id });
                                                      var published_quiz_ids = window[published_var];
                                                      var published_not_yet_taken = quiz_data.filter(function(q) {
                                                          var is_current_quiz = q.id === id;
                                                          var has_been_taken = has_quiz_been_taken(q.id);
                                                          var has_been_published = (published_quiz_ids.filter(function(pq) {
                                                              return pq === q.id;
                                                          }).length > 0);
                                                          return !is_current_quiz && !has_been_taken  && has_been_published;
                                                      });
                                                      return published_not_yet_taken.length > 0 ? published_not_yet_taken[0].url : null;
                                                  }
                                                  /**
                                                   * Get previous quiz answer from localStorage
                                                   * @param {number} quiz_id
                                                   * @returns {string}
                                                   */
                                                  function get_stored_answer(quiz_id) {
                                                      return window.localStorage.getItem(quiz_id)
                                                  }
                                                  /**
                                                   * Make an HTTP GET request and parse the response as JSON, cribbed from http://youmightnotneedjquery.com/
                                                   * @param {string} path - URL to request
                                                   * @param {requestCallback} callback
                                                   */ 
                                                  function get_json(path, callback) {
                                                      var request = new XMLHttpRequest();
                                                      request.open('GET', path, true);
                              
                                                      request.onload = function () {
                                                          if (request.status >= 200 && request.status < 400) {
                                                              var data = JSON.parse(request.responseText);
                                                              callback(null, data);
                                                          }
                                                          else {
                                                              var err = 'DID NOT LOAD ' + path + request;
                                                              callback(err);
                                                          }
                                                      }
                                                      request.onerror = function (err) {
                                                          callback(err);
                                                      }
                                                      request.send();
                                                  }
                                                  /**
                                                   * Major event handler of the code, is invoked on a radio button click and submits the answer
                                                   * @param {Event} e
                                                  */
                                                  function handle_radio_click (e) {
                                                      var el = e.target;
                                                      var data = {
                                                          questionId: id,
                                                          answer: el.value
                                                      };
                                                      var is_correct = +el.value === quiz.correct;
                                                  
                                                      $a('[type="radio"]').forEach(function (radio_el) {
                                                          radio_el.setAttribute('disabled', true);
                                                      });
                              
                                                      post_json(post_url, data, function(err, response) {
                                                          // if the post request fails, whatever, just move
                                                          // on because at least the user took the quiz
                                                          // and we can show whether it is correct or not
                                                          // and store a record that the quiz was taken
                                                          var answer_counts = null;
                                                          if (err) {
                                                              console.error('Error with POST', err);
                                                          } else {
                                                              answer_counts = quiz.answers.map(function(answer, answerIndex) {
                                                                  var match = response.counts.filter(function(c) {
                                                                      return +c.answer === answerIndex;
                                                                  })[0];
                                                                  return {
                                                                      answer: answer,
                                                                      count: match ? match.count : 0
                                                                  };
                                                              });
                                                              console.log({ response, answer_counts });
                                                          }
                                                          var correct_p = $a('form p')[quiz.correct];
                                                          var form = $('form');
                                                          var html = '';
                                                          var next_url = get_next_quiz_url();
                                                          var next_url_html = next_url ? '<a href="' + next_url + '">Answer the next question</a>.' : '<br><br><span id="next-q">No more questions for now, we\'ll be publishing the next one in 20 or so minutes.</span>';
                                                          var span = document.createElement('span');
                                                          var sentence_after = quiz.sentence;
                                                          var sentence_after_p = $('form + p');
                                                          var sentence = '';
                                                          var sentence_p = $('form + p + p');
                              
                                                          if (is_correct) {
                                                              html = 'Yup, that\'s correct.';
                                                          } else {
                                                              html = 'The correct answer is <b>' + quiz.answers[quiz.correct] + '</b>.';
                                                          }
                              
                                                          if (answer_counts) {
                                                              var total_correct = answer_counts[quiz.correct].count;
                                                              var total_submissions = answer_counts.reduce(function(accum, next) {
                                                                  return (accum + next.count);
                                                              }, 0);
                                                              var percent_correct = Math.round((total_correct / total_submissions) * 100)
                                                              sentence += percent_correct + ' percent of those who answered this got it correct.';
                                                          }
                              
                                                          sentence += ' ' + next_url_html;
                                                          
                                                          span.style.marginLeft = '2rem';
                                                          span.innerHTML = html;
                                                          sentence_after_p.innerHTML = '<em>' + sentence_after + '</em>';
                                                          sentence_p.innerHTML = sentence;
                              
                                                          correct_p.appendChild(span);
                                                          form.appendChild(sentence_after_p);
                                                          form.appendChild(sentence_p);
                                                          remember_quiz(el.value);
                                                          log_quiz(is_correct);
                              
                                                          var totals = get_total_for_user();
                                                          var total = totals.correct + totals.incorrect;
                                                          var status_check = 'You\'ve gotten ' + ap_numerals[totals.correct] + ' out of ' + ap_numerals[total] + ' questions correct.';
                                                          if ( total === 10 || document.location.hash === '#devtest' ) {
                                                              status_check += ' <strong>You finished the quiz.</strong>';
                              
                                                          }
                                                          sentence_p.insertAdjacentHTML('afterend', '<p>' + status_check + '</p>');
                              
                                                      })
                                                  }
                                                  /**
                                                   * Checks to see if there is a stored localStorage value for a quiz
                                                   * @param {number} quiz_id
                                                   * @returns {boolean} If there is a stored value or not
                                                   */
                                                  function has_quiz_been_taken(quiz_id) {
                                                      var match = window.localStorage.getItem(quiz_id);
                                                      return !!match;
                                                  }
                                                  /**
                                                   * Checks to see if a quiz has been published and can be rendered
                                                   * @param {number} quiz_id
                                                   * @returns {boolean}
                                                   */
                                                  function has_quiz_been_published(quiz_id) {
                                                      var published = window[published_var];
                                                      var match = published.filter(function(p) {
                                                          return p === quiz_id;
                                                      });
                                                      return match.length > 0;
                                                  }
                                                  /**
                                                  * Make an HTTP POST request with JSON data, cribbed from http://youmightnotneedjquery.com/
                                                  * @param {string} path - URL to request
                                                  * @param {Object} data - Data to send as body of request
                                                  * @param {requestCallback} callback
                                                  */
                                                  function post_json(path, data, callback) {
                                                      var request = new XMLHttpRequest();
                                                      request.open('POST', path, true);
                                                      request.setRequestHeader('Content-Type', 'application/json');
                                                      request.onload = function () {
                                                          if (request.status >= 200 && request.status < 400) {
                                                              var data = JSON.parse(request.responseText);
                                                              callback(null, data);
                                                          }
                                                          else {
                                                              var err = 'DID NOT LOAD ' + path + request;
                                                              callback(err);
                                                          }
                                                      }
                                                      request.onerror = function (err) {
                                                          callback(err);
                                                      }
                                                      request.send(JSON.stringify(data));
                                                  }
                                                  /**
                                                   * Returns a random 8-character string good for busting caches
                                                   * @returns {string}
                                                   */
                                                  function rando() {
                                                      var text = '';
                                                      var possible = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
                                                      for (var i = 0; i < 8; i++)
                                                          text += possible.charAt(Math.floor(Math.random() * possible.length));
                                                      return text;
                                                  }
                                                  /**
                                                   * Create all the HTML needed for the quiz and set up event listeners
                                                   */
                                                  function render_quiz() {
                                                      var already_taken = has_quiz_been_taken(id);
                                                      var is_published = has_quiz_been_published(id);
                                                      var stored_answer = get_stored_answer(id)
                              
                                                      if (!is_published) {
                                                          $('.nbc_data_oscars_quiz').remove();
                                                          return;
                                                      }
                              
                                                      var fieldset = document.createElement('fieldset');
                                                      var form = document.createElement('form');
                                                      var legend = document.createElement('legend');
                                                      var sentence_after = document.createElement('p');
                                                      var sentence = document.createElement('p');
                              
                                                      form.setAttribute('action', '#');
                                                      form.setAttribute('method', 'GET');
                                                      sentence_after.classList.add('nbc_data_oscars_quiz_sentence');
                                                      sentence.classList.add('nbc_data_oscars_quiz_sentence');
                              
                                                      legend.textContent = quiz.q;
                                                      fieldset.append(legend);
                              
                                                      quiz.answers.forEach(function(answer, answer_index){
                                                          var p = document.createElement('p');
                                                          var label = document.createElement('label');
                                                          var input = document.createElement('input');
                                                          var span = document.createElement('span');
                              
                                                          input.addEventListener('click', handle_radio_click);
                                                          input.setAttribute('type', 'radio');
                                                          input.setAttribute('name', id);
                                                          input.setAttribute('value', answer_index);
                                                          span.textContent = ' ' + answer;
                              
                                                          if (already_taken && +stored_answer === answer_index) {
                                                              input.checked = true
                                                          }
                              
                                                          if (already_taken) {
                                                              input.setAttribute('disabled', true);
                                                          }
                              
                                                          label.appendChild(input);
                                                          label.appendChild(span);
                                                          p.appendChild(label);
                              
                                                          fieldset.append(p);
                                                      })
                              
                                                      if (already_taken) {
                                                          // *** GET CURRENT PERCENTAGES
                                                          var was_answer_correct = was_quiz_answered_correctly(id)
                                                          var correct_answer = quiz.answers[quiz.correct]
                                                          sentence.textContent = 'You already answered this question ' + (was_answer_correct ? 'and you got it correct.' : 'and you missed it. The answer is ' + correct_answer + '.');
                              
                                                          // Reader status check.
                                                          // There must be an easier way to write this string.
                                                          var totals = get_total_for_user();
                                                          var total = totals.correct + totals.incorrect;
                                                          if ( was_answer_correct && totals.correct === 1 ) sentence.textContent += ' This was the only question you\'ve gotten correct.';
                                                          else if ( !was_answer_correct && totals.incorrect === 1 ) sentence.textContent += ' This was the only question you got wrong.';
                                                          else if ( was_answer_correct && totals.correct > 1 ) sentence.textContent += ' This was one of the ' + ap_numerals[totals.correct] + ' questions you\'ve gotten correct.';
                                                          else if ( !was_answer_correct && totals.incorrect > 1 ) sentence.textContent += ' This was one of the ' + ap_numerals[totals.incorrect] + ' questions you\'ve gotten wrong.';
                                                          if ( !was_answer_correct && totals.correct > 0 ) sentence.textContent += ' You also got ' + ap_numerals[totals.correct] + ' correct.';
                                                          else if ( was_answer_correct && totals.incorrect > 0 ) sentence.textContent += ' You also got ' + ap_numerals[totals.incorrect] + ' wrong.';
                              
                                                          sentence.innerHTML += ' <a href="https://twitter.com/intent/tweet?text=I%20got%20' + ap_numerals[totals.correct] + '%20out%20of%20' + ap_numerals[total] + '%20on%20the%20NBC%20News%20Oscars%20quiz&amp;url=' + first_quiz_url + '&amp;via=NBCNewsGraphics&amp;related=NBCNewsGraphics,NBCNews">Tweet your score</a>';
                              
                                                          sentence_after.innerHTML = '<em>' + quiz.sentence + '</em>';
                                                      }
                                                      form.appendChild(fieldset);
                                                      $('.nbc_data_oscars_quiz').appendChild(form);
                                                      $('.nbc_data_oscars_quiz').appendChild(sentence_after);
                                                      $('.nbc_data_oscars_quiz').appendChild(sentence);
                                                  }
                                                  /**
                                                   * Record answer in localStorage
                                                   * @param {string} answer
                                                   */
                                                  function remember_quiz(answer) {
                                                      window.localStorage.setItem(id, answer);
                                                  }
                                                  /**
                                                  * Determines if stored answer is correct
                                                  * @param {number} quiz_id
                                                  * @returns {boolean}
                                                  */
                                                  function was_quiz_answered_correctly(quiz_id) {
                                                      var stored = window.localStorage.getItem(quiz_id);
                              
                                                      return +stored === quiz.correct
                                                  }
                                                  /**
                                                   * Record total correct/wrong in localStorage. If this item hasn't been set yet it will be set automatically.
                                                   * @param {string} answer
                                                   */
                                                  function log_quiz(is_correct) {
                                                      if ( is_correct ) {
                                                          var key = quiz_slug + '-correct';
                                                      }
                                                      else {
                                                          var key = quiz_slug + '-incorrect';
                                                      }
                                                      var current = +window.localStorage.getItem(key);
                                                      window.localStorage.setItem(key, current + 1);
                                                  }
                                                  /**
                                                   * Return total correct/wrong from localStorage.
                                                   */
                                                  function get_total_for_user() {
                                                      var key = quiz_slug + '-correct';
                                                      var key = quiz_slug + '-incorrect';
                                                      var correct = +window.localStorage.getItem(quiz_slug + '-correct');
                                                      var incorrect = +window.localStorage.getItem(quiz_slug + '-incorrect');
                                                      return { 'correct': correct, 'incorrect': incorrect };
                                                  }
                              
                                                  // check to see if the published variable has been fetched
                                                  // wait, should this be an interval that continually checks
                                                  // for published quizes?
                                                  // or is it ok that a user will have to refresh the page?
                                                  // does the live blog just refresh itself? how does it work?
                                                  if (window[published_var]) {
                                                      render_quiz();
                                                  } else {
                                                      get_json(published_url, function(err, json) {
                                                          if (err) {
                                                              console.error('Error with GET', err);
                                                              return;
                                                          }
                                                          window[published_var] = json;
                                                          render_quiz();
                                                      })
                                                  }
                                                  
                                              })()
                                          </script>
                                      </div>
                              
                                  </div>
                      </div>
