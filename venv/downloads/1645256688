<script>
  function viewport() {
    var e = window, t = "inner";
    if (!("innerWidth"in window)) {
      t = "client";
      e = document.documentElement || document.body
    }
    return {width: e[t + "Width"], height: e[t + "Height"]}
  }
</script>
